<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/textView1_sensor_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SENSOR ADDED"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2_sensor_added"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2_sensor_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="'Front Door''"
        android:textColor="@color/gray"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView_sensor_added"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1_sensor_added" />

    <ImageView
        android:id="@+id/imageView_sensor_added"
        android:layout_width="97dp"
        android:layout_height="91dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3_sensor_added"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2_sensor_added"
        app:srcCompat="@drawable/tick" />

    <TextView
        android:id="@+id/textView3_sensor_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD ANOTHER SENSOR"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4_sensor_added"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_sensor_added" />

    <TextView
        android:id="@+id/textView4_sensor_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTINUE TO ADD USERS"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3_sensor_added" />


</androidx.constraintlayout.widget.ConstraintLayout>
